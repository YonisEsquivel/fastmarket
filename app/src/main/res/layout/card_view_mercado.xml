<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_mercado"
    android:layout_margin="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:contentPadding="4dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        
        <ImageView
            android:id="@+id/imgMercado"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

        </ImageView>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo Articulo"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/imgMercado"
            android:layout_toRightOf="@+id/imgMercado"
            android:layout_alignParentTop="true"
            android:textSize="20dp"
            android:id="@+id/productoMercado">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/imgMercado"
            android:layout_toRightOf="@+id/imgMercado"
            android:layout_below="@+id/productoMercado"
            android:textSize="18dp"
            android:id="@+id/detallesMercado">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/imgMercado"
            android:layout_toRightOf="@+id/imgMercado"
            android:layout_below="@+id/detallesMercado"
            android:textSize="20dp"
            android:id="@+id/precioMercado">
        </TextView>

        <ImageButton
            android:id="@+id/add_cart"
            android:layout_width="42dp"
            android:layout_height="35dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/imgMercado"
            android:src="@drawable/add_cart"
            android:backgroundTint="@color/rojo_basic"
            style="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        </ImageButton>
        <TextView
            android:layout_width="42dp"
            android:layout_height="15dp"
            android:layout_below="@id/add_cart"
            android:layout_marginLeft="250dp"
            android:text="AÃ±adir"
            android:textSize="11dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@color/rojo_basic"
            android:textColor="@color/white"
            >
        </TextView>
