<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="view.ui.fragments.CarritoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/bannerlogin">
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="82dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/precio_subtotal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Subtotal: 0"
            android:textAlignment="gravity"
            android:layout_marginLeft="100dp"
            android:textSize="18dp"
            android:layout_marginTop="5dp">

        </TextView>
        <TextView
            android:id="@+id/precio_iva"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="IVA: 0"
            android:textAlignment="gravity"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/precio_subtotal"
            android:textSize="18dp"
            android:layout_marginTop="5dp">

        </TextView>
        <TextView
            android:id="@+id/precio_total"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Total a pagar: 0"
            android:textAlignment="gravity"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/precio_iva"
            android:textSize="20dp">

        </TextView>
    </RelativeLayout>

    <TextView
        android:id="@+id/boton_compra"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="184dp"
        android:background="@color/azul_basic"
        android:text="Finalizar Compra"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="120dp"></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewcompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="60dp">
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/buttonNavigationMenu"
            style="@style/Widget.MaterialComponents.BottomNavigationView.Colored"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="600dp"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/menu_navigation_bar">

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </LinearLayout>

</FrameLayout>