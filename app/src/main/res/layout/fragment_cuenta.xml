<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="view.ui.fragments.CuentaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/bannerlogin">
        </RelativeLayout>



    </LinearLayout>

    <ImageView
        android:id="@+id/photoperfil"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/photoperfil"></ImageView>

    <Button
        android:id="@+id/photogaleria"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="240dp"
        android:layout_marginRight="60dp"
        android:text="GalerÃ­a"
        android:textStyle="bold"
        android:backgroundTint="@color/azul_basic">
    </Button>

    <Button
        android:id="@+id/photocamera"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="130dp"
        android:backgroundTint="@color/azul_basic"
        android:text="Camara"
        android:textStyle="bold"></Button>

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="100dp"
        android:text="Modificar Foto"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="22dp"
        android:fontFamily="@font/fontroboto">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/buttonNavigationMenu"
            style="@style/Widget.MaterialComponents.BottomNavigationView.Colored"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="600dp"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/menu_navigation_bar">

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </LinearLayout>

</FrameLayout>